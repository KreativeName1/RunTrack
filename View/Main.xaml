<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="RunTrack.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunTrack" d:DataContext="{d:DesignInstance Type=local:MainModel}"
        mc:Ignorable="d"
        DataContext="{StaticResource pmodel}"
        Content="{Binding CurrentPage}"
        Title="{Binding PageTitle}"
                  ShowTitleBar="True" ShowMinButton="False" ShowMaxRestoreButton="False" ShowCloseButton="False"
        Icon="pack://application:,,,/Images/iconRunMan.ico"
        WindowStartupLocation="CenterScreen" WindowTitleBrush="#005746" Background="White" TitleAlignment="Center"
        TitleBarHeight="20" GlowBrush="#005746" ResizeMode="CanResizeWithGrip"  BorderBrush="#005746" BorderThickness="1"
        Height="750" Width="1000" NonActiveBorderBrush="#005746" NonActiveGlowBrush="#FF5A00FF" NonActiveWindowTitleBrush="#005746">

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="BTN_Minimize" Click="BTN_Minimize_Click"  Content="-">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="4 0 0 0"
                         VerticalAlignment="Center"
                                        FontWeight="UltraBold"
                                       FontSize="24"
                         Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button x:Name="BTN_Maximize" Click="BTN_Maximize_Click"  Content="□">
            <Button.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="4 0 0 0"
                                   FontWeight="UltraBold"
                                   FontSize="24"
                         VerticalAlignment="Center"
                         Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </Button.ContentTemplate>
            </Button>
            <Button x:Name="BTN_Close"  Content="✖" Click="BTN_Close_Click"  >
            <Button.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="4 0 0 0"
                         VerticalAlignment="Center"
                         Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

</mah:MetroWindow>
