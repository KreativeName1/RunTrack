<Window x:Class="Klimalauf.Einstellungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klimalauf" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Einstellungen" Height="450" Width="800">
    <Grid>
        <Rectangle Height="28" Margin="0,0,0,0" Stroke="#005746" Fill="#005746" VerticalAlignment="Top"/>

        <Label Content="Benutzer:" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="ScannerName" Content="Name, Vorname" HorizontalAlignment="Left" Margin="79,1,0,0" VerticalAlignment="Top" Foreground="White"/>

        <Label Content="Admin" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>

        <Image Source="Images\logout.png" Width="24" Height="24" VerticalAlignment="Top" Cursor="Hand" Margin="0,2,10,0" HorizontalAlignment="Right" MouseDown="LogoutIcon_MouseDown">
            <Image.ToolTip>
                <ToolTip>Logout</ToolTip>
            </Image.ToolTip>
        </Image>

        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" HorizontalAlignment="Right" Width="235" VerticalAlignment="Bottom">
            <Button Content="Speichern" Click="Save_Click" Width="100" Height="25" Margin="5,5,20,5"/>
            <Button Content="Schließen" Click="CloseWindow_Click" Width="100" Height="25" Margin="5"/>
        </StackPanel>
        <Label Content="Minuten zum Warten zwischen den Scanns nach Rundengröße" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Rectangle Height="5" Margin="0,60,0,0" Stroke="#FF5F5F5F" Fill="#FF5F5F5F" VerticalAlignment="Top"/>

        <Grid x:Name="GridSettings" Margin="250,100,250,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Margin="5,33,5,33" Grid.Column="0" VerticalAlignment="Center">
                <Label Content="Klein"  FontSize="14" HorizontalAlignment="Center" Width="40" Height="29"  />
                <Label Content="Mittel" HorizontalAlignment="Center" FontSize="14" Cursor="" Height="28" Width="46" Margin="5" Grid.Column="0"/>
                <Label Content="Groß" HorizontalAlignment="Center" RenderTransformOrigin="0.389,4.316" FontSize="14" Height="29" Width="40" Grid.Column="0"/>
            </StackPanel>

            <Rectangle x:Name="Spacer" Width="2.5" Height="120px" Stroke="#FF5F5F5F" Fill="#FF5F5F5F" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,33,5,33" VerticalAlignment="Center">
                <xctk:DoubleUpDown x:Name="klein" Value="1" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="45" Grid.Column="1" Height="25" VerticalAlignment="Top"/>
                <xctk:DoubleUpDown x:Name="mittel" Value="2" Width="45" Height="26" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="8"/>
                <xctk:DoubleUpDown x:Name="groß" Value="3" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="45"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
