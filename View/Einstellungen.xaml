<Window x:Class="Klimalauf.Einstellungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klimalauf" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Einstellungen" Height="450" Width="800">
    <Grid>
        <Rectangle Height="28" Margin="0,0,0,0" Stroke="#005746" Fill="#005746" VerticalAlignment="Top"/>

        <Label Content="Benutzer:" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="ScannerName" Content="Name, Vorname" HorizontalAlignment="Left" Margin="79,1,0,0" VerticalAlignment="Top" Foreground="White"/>

        <Label Content="Admin" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>

        <Image Source="Images\logout.png" Width="24" Height="24" VerticalAlignment="Top" Cursor="Hand" Margin="0,2,10,0" HorizontalAlignment="Right" MouseDown="LogoutIcon_MouseDown">
            <Image.ToolTip>
                <ToolTip>Logout</ToolTip>
            </Image.ToolTip>
        </Image>

        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" HorizontalAlignment="Right" Width="235" VerticalAlignment="Bottom">
            <Button Content="Speichern" Click="Save_Click" Width="100" Height="25" Margin="5,5,20,5"/>
            <Button Content="Schließen" Click="CloseWindow_Click" Width="100" Height="25" Margin="5"/>
        </StackPanel>
        <Label Content="Minuten zum Warten zwischen den Scanns nach Rundengröße" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Rectangle Height="5" Margin="0,60,0,0" Stroke="#FF5F5F5F" Fill="#FF5F5F5F" VerticalAlignment="Top"/>

        <Label Content="Klein" HorizontalAlignment="Right" Margin="0,173,406,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,0.002" FontSize="14" />
        <Label Content="Mittel" HorizontalAlignment="Left" Margin="348,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <Label Content="Groß" HorizontalAlignment="Left" Margin="354,233,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.389,4.316" FontSize="14"/>

        <Rectangle Height="100" Width="2" Margin="0,0,0,0" Stroke="#FF5F5F5F" Fill="#FF5F5F5F" VerticalAlignment="Center"/>

        <xctk:DoubleUpDown x:Name="klein" Value="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="408,175,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="45"/>
        <xctk:DoubleUpDown x:Name="mittel" Value="2" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,0,347,0" HorizontalAlignment="Right" Width="46"/>
        <xctk:DoubleUpDown x:Name="gross" Value="3" Width="46" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,235,347,0"/>
    </Grid>
</Window>
