<Page x:Class="Klimalauf.Import3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Klimalauf"
      mc:Ignorable="d"  Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Import3">

    <Grid>
        <!-- This page shows all the data to show the user what he has uploaded -->
        <!-- Schüler,klassen, schulenname-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:TopBar x:Name="Leiste"  HorizontalAlignment="Stretch" VerticalAlignment="Top" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="32" x:Name="tbTitel" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Text="Erfolg!"/>
            <TextBlock x:Name="tbMeldung" FontSize="16" Text="Meldung"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSchliessen" Margin="20" HorizontalAlignment="Center" Content="Schließen" FontSize="16" Width="100" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
