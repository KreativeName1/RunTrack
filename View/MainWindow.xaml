<Window x:Class="Klimalauf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klimalauf" xmlns:fc="http://devpelux.github.io/fullcontrols"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Anmeldung" Height="360" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/Images/iconRunMan.ico">
    <Grid>
        <Rectangle Height="28" Margin="0,0,0,0" Stroke="#005746" Fill="#005746" VerticalAlignment="Top"/>
        <Label Content="🏃🏻 RunTrack" HorizontalAlignment="Center" Margin="0,1,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" FontWeight="Bold"/>

        <Image Source="pack://application:,,,/Images/credits.png" Width="24" Height="24" VerticalAlignment="Top" Cursor="Hand" Margin="0,2,10,0" HorizontalAlignment="Right" MouseDown="btnCredits_Click" Grid.Column="2">
            <Image.ToolTip>
                <ToolTip Cursor="">Credits</ToolTip>
            </Image.ToolTip>
        </Image>

        <Label Content="Vorname:" Margin="98,86,0,0" HorizontalAlignment="Left" Width="100" FontSize="14" FontWeight="Bold" Height="29" VerticalAlignment="Top"/>
        <Label Content="Nachname:" HorizontalAlignment="Left" Margin="98,132,0,0" FontSize="14" RenderTransformOrigin="0.529,0.231" FontFamily="72" FontWeight="Bold" Height="26" VerticalAlignment="Top"/>

        <fc:TextBoxPlus x:Name="FirstNameTextBox" ForegroundBrushOnSelected="Blue" UnderlineBrushOnSelected="#28713E" Margin="0,85,100,0" TextWrapping="Wrap" HorizontalAlignment="Right" Width="150" FontSize="14" Padding="5" Foreground="Gray" Text="Max" GotFocus="FirstNameTextBox_GotFocus" LostFocus="FirstNameTextBox_LostFocus" Height="30" VerticalAlignment="Top" KeyDown="TextBox_KeyDown" TextChanged="FirstNameTextBox_TextChanged"/>
        <Label x:Name="warningVorname" Content="⚠️" FontSize="18" HorizontalAlignment="Right" Margin="0,83,65,0" VerticalAlignment="Top" Foreground="Red" Cursor="Help" Visibility="Collapsed">
            <Label.ToolTip>
                <ToolTip>
                    Bitte geben Sie Ihren Vornamen ein.
                </ToolTip>
            </Label.ToolTip>
        </Label>

        <fc:TextBoxPlus x:Name="LastNameTextBox" ForegroundBrushOnSelected="Blue" UnderlineBrushOnSelected="#28713E" HorizontalAlignment="Right" Margin="0,130,100,0" TextWrapping="Wrap" Width="150" FontSize="14" Padding="5" Foreground="Gray" Text="Mustermann" GotFocus="LastNameTextBox_GotFocus" LostFocus="LastNameTextBox_LostFocus" Height="30" VerticalAlignment="Top" KeyDown="TextBox_KeyDown" TextChanged="LastNameTextBox_TextChanged"/>
        <Label x:Name="warningNachname" Content="⚠️" FontSize="18" HorizontalAlignment="Right" Margin="0,128,65,0" VerticalAlignment="Top" Foreground="Red" Cursor="Help" Visibility="Collapsed">
            <Label.ToolTip>
                <ToolTip>
                    Bitte geben Sie Ihren Nachnamen ein.
                </ToolTip>
            </Label.ToolTip>
        </Label>


        <Grid x:Name="gridPasswordLable" Visibility="Visible" HorizontalAlignment="Center" Height="27" Margin="0,168,0,0" VerticalAlignment="Top" Width="70">
            <Label Content="Optional:" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="72 Light" FontSize="15"/>
            <Rectangle HorizontalAlignment="Right" Height="1" Margin="0,20,54,0" Stroke="#7E8182" VerticalAlignment="Top" Width="17"/>
            <Rectangle HorizontalAlignment="Left" Height="1" Margin="21,20,0,0" Stroke="#7E8182" VerticalAlignment="Top" Width="50"/>
        </Grid>

        <Border x:Name="borderPassword" CornerRadius="5" Visibility="Visible" Background="#FFECECEC" HorizontalAlignment="Center" Height="40" Margin="0,195,0,0" VerticalAlignment="Top" Width="270">
            <Grid x:Name="gridPassword" Background="Transparent">
                <Label x:Name="lblPasswort" Content="Admin Passwort:" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontSize="13" FontFamily="72 Light" VerticalAlignment="Center" Margin="1,0,0,0"/>
                <fc:PasswordBoxPlus x:Name="AdminPasswordBox" ForegroundOnSelected="Blue" Foreground="Blue" UnderlineBrushOnSelected="#28713E" EnablePeekButton="True" CornerRadius="3" HorizontalAlignment="Right" Margin="0,0,5,0" Width="150" FontSize="13" Padding="5" Height="30" VerticalAlignment="Center" KeyDown="TextBox_KeyDown" GotFocus="txtPasswort_GotFocus" LostFocus="txtPasswort_LostFocus" PasswordChanged="txtPasswort_PasswordChanged"/>

            </Grid>
        </Border>
        <Label x:Name="warningPassword" Content="⚠️" FontSize="18" HorizontalAlignment="Right" Margin="0,198,55,0" VerticalAlignment="Top" Foreground="Red" Cursor="Help" Visibility="Collapsed">
            <Label.ToolTip>
                <ToolTip>
                    Die Passwörter stimmt nicht überein!
                </ToolTip>
            </Label.ToolTip>
        </Label>
        <fc:ButtonPlus x:Name="btnLogin" Content="Einloggen" BackgroundOnMouseOver="#879bbe" ForegroundOnMouseOver="White" CornerRadius="5.5" Background="#6C7C98" Foreground="White" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="250" Cursor="Hand" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Click="LoginButton_Click" Height="35"/>
    </Grid>
</Window>
