<ContentControl x:Class="Klimalauf.DraggableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klimalauf"
             mc:Ignorable="d">
    <Grid Cursor="Hand">
        <Border CornerRadius="3,3,0,0" Background="#6C7C98" >
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Direction="270" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White" Text="{Binding TextContent}" x:Name="draggableItem" HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center" />
            <!--Button x:Name="btnRemove" BorderThickness="0" Background="Transparent" Content="X" HorizontalAlignment="Right" Margin="5,0,0,0" Padding="0,1,3,0" VerticalAlignment="Top" FontSize="12"/-->
            </StackPanel>
        </Border>
    </Grid>
</ContentControl>
